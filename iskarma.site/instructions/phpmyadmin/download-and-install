#download link for current latest version
https://files.phpmyadmin.net/phpMyAdmin/5.2.1/phpMyAdmin-5.2.1-all-languages.zip

# check latest version at
https://www.phpmyadmin.net/downloads/

# extract and copy to root directory
# open directory
iskarma.local/phpMyAdmin

# if repository is available you can directly install using
sudo apt install phpmyadmin

# check installation with
sudo dpkg -l | grep phpmyadmin

# after installation symlink to root folder
sudo ln -s /usr/share/phpmyadmin /var/www/html/phpmyadmin

# restart nginx
sudo systemctl restart nginx

# requires mysqli extention to be enabled in php

sudo apt install php8.3-mysqli
sudo nano /etc/php/8.3/fpm/php.ini

# uncomment the line for mysqli extenstion by removing ; at the begining
;extension=mysqli

# restart php8.3-fpm
sudo systemctl restart php8.3-fpm

# enable php8.3-fpm to start with the system
sudo systemctl enable php8.3-fpm
