# login to mysql
sudo mysql

# show users listed in current database
select user, host from mysql.user;

# change user password, set new password
SET PASSWORD FOR 'root'@'localhost' = PASSWORD('new_password');

# flush privileges to apply the new settings
flush privileges;

# create new user
create user iskarmac_udbhav@localhost identified by 'getwired';

# rename user
rename user iskarma_udbhav@localhost to iskarmac_udbhav@localhost;
flush privileges;

# grant all privileges to a databases
grant all privileges on iskarmac_test@localhost to iskarmac_udbhav@localhost;

# show databases
show databases;

# create database
create database iskarmac_test

# select a database
use iskarmac_test;

# exit mysql
exit;
