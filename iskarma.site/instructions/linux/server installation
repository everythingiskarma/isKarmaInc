# purge all previous versions of php, nginx, mariadb and phpmyadmin
sudo apt purge php nginx mariadb phpmyadmin

# add repositories for latest packages
sudo apt-add-repository ppa:ondrej/php
sudo apt-add-repository ppa:ondrej/nginx
sudo apt-add-repository ppa:phpmyadmin/ppa


# install
sudo apt install php php8.3-fpm mariadb-server mariadb-client nginx-full phpmyadmin



# install dropbox on server via ssh
cd ~ && wget -O - "https://www.dropbox.com/download?plat=lnx.x86_64" | tar xzf -
# run dropbox and open url to link account to the server
~/.dropbox-dist/dropboxd

# redirect to https version
if ($host = iskarma.com) {
  return 301 https://$host$request_uri;
}
